<?xml version="1.0" encoding="utf-8"?>
<!-- @author bravewolf -->
<!-- themes.xml is used to set themes of application -->

<resources>

    <!-- Overwrite the ToggleButton style -->
    <style name="Widget.Button.Toggle" parent="android:Widget">
        <item name="android:background">@drawable/togglebutton_wifi_switch_bg</item>
        <item name="android:textOn">Add</item>
        <item name="android:textOff">Del</item>
        <item name="android:disabledAlpha">?android:attr/disabledAlpha</item>
    </style>

    <style name="ToggleButtonTheme" parent="@android:Theme.Black">

        <!-- Tell Android to use a custom style when creating a ToggleButton -->
        <item name="android:buttonStyleToggle">@style/Widget.Button.Toggle</item>
        <item name="android:textOn"></item>
        <item name="android:textOff"></item>
    </style>

    <!-- Overwrite the application background -->
    <style name="BackGround" parent="android:Theme.Black">
        <item name="android:windowBackground">@drawable/mainbackground</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

</resources>